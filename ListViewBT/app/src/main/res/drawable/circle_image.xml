    <!-- Border -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Radius (rounded corners) -->
            <stroke android:width="1dp" android:color="#FF0000" /> <!-- Border width and color -->
        </shape>
    </item>

    <!-- Content (Optional) -->
    <item android:id="@android:id/content">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
